<h1>Your Cart</h1>

<% if @cart_items.any? %>
  <ul>
    <% @cart_items.each do |item| %>
      <% product = Product.find(item["product_id"]) %>
      <li>
        <%= product.name %> - Size: <%= item["size"] %>
      </li>
    <% end %>
  </ul>
  <%= button_to "Checkout", checkout_cart_path, method: :post, class: "mt-6 py-2 px-4 bg-gray-500 hover:bg-gray-600 rounded text-white" %>
  <%= button_to "Clear Cart", clear_cart_path, method: :delete, class: "py-2 px-4 bg-gray-500 hover:bg-gray-600 rounded text-white" %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>